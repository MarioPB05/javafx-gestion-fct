<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="640.0" stylesheets="@../css/styles.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AssignmentController">
    <VBox alignment="CENTER" prefHeight="680.0" prefWidth="1280.0" spacing="25.0">
        <Label text="Nueva Asignación" textFill="BLACK">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="25.0">
            <Label text="Alumno" textFill="BLACK">
                <font>
                    <Font size="17.0"/>
                </font>
            </Label>
            <ComboBox fx:id="choiceStudent" prefHeight="40.0" prefWidth="250.0"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="25.0">
            <Label text="Empresa" textFill="BLACK">
                <font>
                    <Font size="17.0"/>
                </font>
            </Label>
            <ComboBox fx:id="choiceCompany" prefHeight="40.0" prefWidth="250.0"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="25.0">
            <Label text="Tutor" textFill="BLACK">
                <font>
                    <Font size="17.0"/>
                </font>
            </Label>
            <ComboBox fx:id="choiceTutor" prefHeight="40.0" prefWidth="250.0"/>
        </HBox>
    </VBox>
    <HBox alignment="CENTER" prefHeight="113.0" prefWidth="640.0" spacing="25.0">
        <Button fx:id="btnAdd" mnemonicParsing="false" styleClass="button-primary" text="Añadir Asignación">
            <font>
                <Font size="17.0"/>
            </font>
        </Button>
        <Button fx:id="btnCancel" mnemonicParsing="false" styleClass="button-secondary" text="Cancelar"/>
    </HBox>
</VBox>
