                <TableColumn fx:id="colCompany" prefWidth="220.0" text="Empresa" />
                <TableColumn fx:id="colCompanyManager" prefWidth="220.0" text="Representante Legal" />
                <TableColumn fx:id="colCompanyTutor" prefWidth="220.0" text="Tutor Laboral" />
